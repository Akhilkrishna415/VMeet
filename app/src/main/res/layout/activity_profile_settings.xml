<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Profile_settings">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            android:backgroundTint="@color/mainText"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:fontFamily="sans-serif"
            android:text="Profile Settings"
            android:textColor="@color/white"
            android:textSize="25sp" />




    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="60dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:layout_marginLeft="140dp"
                android:layout_marginTop="25dp"
                app:srcCompat="@drawable/defaultprofileimg" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:fontFamily="sans-serif-condensed"
                android:padding="10dp"
                android:text="Email "
                android:textColor="@color/mainText"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/Profile_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:fontFamily="sans-serif-condensed"
                android:padding="10dp"
                android:textColor="@color/mainText"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:fontFamily="sans-serif-condensed"
                android:padding="10dp"
                android:text="Phone Number"
                android:textColor="@color/mainText"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/Profile_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:fontFamily="sans-serif-condensed"
                android:padding="10dp"
                android:textColor="@color/mainText"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:fontFamily="sans-serif-condensed"
                android:padding="10dp"
                android:text="Staff ID"
                android:textColor="@color/mainText"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/Profile_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:fontFamily="sans-serif-condensed"
                android:padding="10dp"
                android:textColor="@color/mainText"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:fontFamily="sans-serif-condensed"
                android:padding="10dp"
                android:text="Department"
                android:textColor="@color/mainText"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/Profile_department"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:fontFamily="sans-serif-condensed"
                android:padding="10dp"
                android:textColor="@color/mainText"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:fontFamily="sans-serif-condensed"
                android:padding="10dp"
                android:text="Designation"
                android:textColor="@color/mainText"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/Profile_designation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:fontFamily="sans-serif-condensed"
                android:padding="10dp"
                android:textColor="@color/mainText"
                android:textStyle="bold" />

            <Button
                android:id="@+id/edit_profile"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:background="@color/mainText"
                android:text="Edit profile"
                android:textColor="#fff" />


        </LinearLayout>
    </ScrollView>


</RelativeLayout>