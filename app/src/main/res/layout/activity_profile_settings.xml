<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Profile_settings">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:backgroundTint="@color/mainText"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme" />

    <!--        <TextView-->
    <!--            android:id="@+id/textView10"-->
    <!--            android:layout_width="wrap_content"-->
    <!--            android:layout_height="wrap_content"-->
    <!--            android:layout_marginTop="10sp"-->
    <!--            android:layout_marginLeft="15sp"-->
    <!--            android:fontFamily="sans-serif"-->
    <!--            android:text="Profile Settings"-->
    <!--            android:textColor="@color/white"-->
    <!--            android:textSize="25sp" />-->


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="60sp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:backgroundTint="@color/background">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profileimageView"
                    android:layout_width="125sp"
                    android:layout_height="125sp"
                    android:layout_marginStart="140sp"
                    android:layout_marginTop="25sp"
                    android:layout_marginBottom="30sp"
                    android:src="@drawable/defaultprofileimg"
                    app:civ_border_color="@color/background"
                    app:civ_border_width="2dp" />

                <ImageButton
                    android:id="@+id/imageButton"
                    android:layout_width="32dp"
                    android:layout_height="33dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="50sp"
                    android:layout_marginTop="35sp"
                    android:backgroundTint="@color/blanched_almond"

                    app:srcCompat="@drawable/ic_menu_camera" />


            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginBottom="10sp">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="285sp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="5sp"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-condensed"
                    android:padding="10sp"
                    android:text="Email :"
                    android:textColor="@color/mainText"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/Profile_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5sp"
                    android:textSize="18sp"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-condensed"
                    android:padding="10sp"
                    android:textColor="@color/mainText"
                    android:textStyle="bold" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginBottom="10sp">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="285sp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5sp"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-condensed"
                    android:padding="10sp"
                    android:text="Phone Number :"
                    android:textColor="@color/mainText"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/Profile_number"
                    android:layout_width="match_parent"
                    android:textSize="18sp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5sp"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-condensed"
                    android:padding="10sp"
                    android:textColor="@color/mainText"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginBottom="10sp">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="285sp"
                    android:textSize="18sp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5sp"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-condensed"
                    android:padding="10sp"
                    android:text="Staff ID :"
                    android:textColor="@color/mainText"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/Profile_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5sp"
                    android:textSize="18sp"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-condensed"
                    android:padding="10sp"
                    android:textColor="@color/mainText"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginBottom="10sp">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="285sp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5sp"
                    android:textSize="18sp"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-condensed"
                    android:padding="10sp"
                    android:text="Department :"
                    android:textColor="@color/mainText"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/Profile_department"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5sp"
                    android:textSize="18sp"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-condensed"
                    android:padding="10sp"
                    android:textColor="@color/mainText"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginBottom="10sp">

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="285sp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5sp"
                    android:textSize="18sp"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-condensed"
                    android:padding="10sp"
                    android:text="Designation :"
                    android:textColor="@color/mainText"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/Profile_designation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5sp"
                    android:textSize="18sp"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-condensed"
                    android:padding="10sp"
                    android:textColor="@color/mainText"
                    android:textStyle="bold" />

            </LinearLayout>

            <Button
                android:id="@+id/edit_profile"
                android:layout_width="180sp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="20sp"
                android:layout_marginTop="20sp"
                android:background="@drawable/myrect"
                android:text="Edit profile"
                android:textColor="#fff" />


        </LinearLayout>
    </ScrollView>


</RelativeLayout>