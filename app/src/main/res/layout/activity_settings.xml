<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Settings">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:backgroundTint="@color/mainText"
        android:theme="?attr/actionBarTheme" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:text="Settings"
        android:textColor="@color/white"
        android:textSize="35sp"
        android:layout_marginLeft="125sp"/>

    <LinearLayout
        android:id="@+id/settingspane"
        android:layout_width="match_parent"
        android:layout_height="400sp"
        android:layout_marginStart="8sp"
        android:layout_marginLeft="8sp"
        android:layout_marginTop="115sp"
        android:layout_marginRight="8sp"
        android:layout_marginBottom="197sp"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="250sp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="58sp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5sp"
                    android:layout_marginRight="20sp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/account" />

                <TextView
                    android:id="@+id/profile_settings"
                    android:layout_width="266sp"
                    android:layout_height="50sp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="70sp"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif"
                    android:padding="10sp"
                    android:text="Profile Settings"
                    android:textColor="@color/mainText"
                    android:textSize="23sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/chevron2"
                    android:layout_width="30sp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginTop="20sp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/chevronright" />

            </androidx.cardview.widget.CardView>


        </LinearLayout>

        <!--        <View-->
        <!--            android:id="@+id/divider2"-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="3sp"-->
        <!--            android:background="?android:attr/listDivider" />-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="250sp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="55sp"
                    android:layout_height="56sp"
                    android:layout_marginRight="20sp"
                    android:layout_weight="1"
                    android:padding="10sp"
                    app:srcCompat="@drawable/faq" />

                <TextView
                    android:id="@+id/faqs"
                    android:layout_width="266sp"
                    android:layout_height="50sp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="70sp"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif"
                    android:padding="10sp"
                    android:text="FAQ's"
                    android:textColor="@color/mainText"
                    android:textSize="23sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/chevron1"
                    android:layout_width="30sp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginTop="20sp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/chevronright" />

            </androidx.cardview.widget.CardView>


        </LinearLayout>

        <!--        <View-->
        <!--            android:id="@+id/divider3"-->
