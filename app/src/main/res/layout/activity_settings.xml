        <!--            android:layout_marginTop="10sp"-->
        <!--            android:background="?android:attr/listDivider" />-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="250sp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="61sp"
                    android:layout_height="52sp"
                    android:layout_weight="1"
                    android:padding="10sp"
                    app:srcCompat="@drawable/feedbackprofile" />

                <TextView
                    android:id="@+id/feedback"
                    android:layout_width="266sp"
                    android:layout_height="50sp"
                    android:layout_marginLeft="70sp"
                    android:layout_marginBottom="10sp"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif"
                    android:padding="10sp"
                    android:text="Feedback"
                    android:textColor="@color/mainText"
                    android:textSize="23sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/chevron4"
                    android:layout_width="30sp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginTop="20sp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/chevronright" />
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/from"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="166sp"
        android:layout_marginBottom="141sp"
        android:layout_centerHorizontal="true"
        android:text="from"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/appName"
        android:layout_width="185sp"
        android:layout_height="76sp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="129sp"
        android:layout_marginEnd="96sp"
        android:layout_marginBottom="60sp"
        android:gravity="center_horizontal"
        android:text="VMeet v1.0"
        android:textSize="20sp" />


