<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Settings">



    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:backgroundTint="@color/mainText"
        android:theme="?attr/actionBarTheme" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:text="Settings"
        android:textColor="@color/white"
        android:textSize="35sp"
        android:layout_marginLeft="125dp"/>

    <LinearLayout
        android:id="@+id/settingspane"
        android:layout_width="wrap_content"
        android:layout_height="419dp"
        android:layout_alignParentStart="false"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="115dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="197dp"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="305dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/account" />

            <TextView
                android:id="@+id/profile_settings"
                android:layout_width="280dp"
                android:layout_height="50dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:fontFamily="sans-serif"
                android:padding="10dp"
                android:text="Profile Settings"
                android:textColor="@color/mainText"
                android:textSize="23dp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/chevron1"
                android:layout_width="12dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                app:srcCompat="@drawable/chevronright" />

        </LinearLayout>

        <View
            android:id="@+id/divider2"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="?android:attr/listDivider" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="40dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:padding="10dp"
                app:srcCompat="@drawable/faq" />

            <TextView
                android:id="@+id/faqs"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:fontFamily="sans-serif"
                android:padding="10dp"
                android:text="FAQ's"
                android:textColor="@color/mainText"
                android:textSize="23dp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/chevron2"
                android:layout_width="12dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                app:srcCompat="@drawable/chevronright" />


        </LinearLayout>

        <View
            android:id="@+id/divider3"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_marginTop="5dp"
            android:background="?android:attr/listDivider" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="291dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="48dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="10dp"
                app:srcCompat="@drawable/contactus" />

            <TextView
                android:id="@+id/contactus"
                android:layout_width="287dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:fontFamily="sans-serif"
                android:padding="10dp"
                android:text="Contact us"
                android:textColor="@color/mainText"
                android:textSize="23dp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/chevron3"
                android:layout_width="12dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                app:srcCompat="@drawable/chevronright" />

        </LinearLayout>

        <View
            android:id="@+id/divider4"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_marginTop="10dp"
            android:background="?android:attr/listDivider" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="376dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="68dp"
                android:layout_height="52dp"
                android:layout_weight="1"
                android:padding="10dp"
                app:srcCompat="@drawable/feedbackprofile" />

            <TextView
                android:id="@+id/feedback"
                android:layout_width="310dp"
                android:layout_height="49dp"
                android:layout_weight="1"
                android:padding="10dp"
                android:text="Feedback"
                android:textColor="@color/mainText"
                android:textSize="23dp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/chevron4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="50dp"

                android:layout_weight="1"
                app:srcCompat="@drawable/chevronright" />
        </LinearLayout>


    </LinearLayout>

    <TextView
        android:id="@+id/from"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/settingspane"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="125dp"
        android:text="from" />

    <TextView
        android:id="@+id/vmeet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/settingspane"
        android:text="VMeet" />
</RelativeLayout>