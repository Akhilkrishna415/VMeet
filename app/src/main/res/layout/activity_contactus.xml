<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Contactus">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:backgroundTint="@color/mainText"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme" />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="wrap_content"
            android:layout_height="133sp"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="20sp"
            android:layout_marginTop="100sp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/contactus" />


        <TextView
            android:id="@+id/textView11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30sp"
            android:text="For any queries, please contact to our supporting team"
            android:textAlignment="center"
            android:textColor="@color/mainText"
            android:textStyle="bold"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="19sp"
            android:layout_weight="1"
            android:layout_marginTop="60sp"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="84dp"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="58sp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20sp"
                    android:layout_marginTop="5sp"
                    android:layout_marginRight="20sp"
                    android:layout_weight="1"
                    android:background="@drawable/circle"
                    app:srcCompat="@drawable/gmail" />

                <TextView
                    android:id="@+id/profile_settings"
                    android:layout_width="325sp"
                    android:layout_height="50sp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="90sp"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif"
                    android:padding="10sp"
                    android:text="Vmeetsupportteam@gmail.com"
                    android:textColor="@color/mainText"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="155sp"
            android:layout_weight="1"
            android:layout_marginTop="20sp"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="68sp"
                android:layout_marginTop="0sp"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="58sp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20sp"
                    android:layout_marginTop="5sp"
                    android:layout_marginRight="20sp"
                    android:background="@drawable/circle"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/call" />

                <TextView
                    android:id="@+id/call"
                    android:layout_width="325sp"
                    android:layout_height="50sp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="90sp"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif"
                    android:padding="10sp"
                    android:text="+1 5147939988"
                    android:textColor="@color/mainText"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>


    </LinearLayout>



</RelativeLayout>